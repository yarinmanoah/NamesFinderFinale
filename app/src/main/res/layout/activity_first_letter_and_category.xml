<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".namesfinder.ActivityFirstLetterAndCategory"
    android:background="@drawable/ic_bg">



    <!-- Back Button -->
    <Button
        android:id="@+id/a_ByFirstLetterButtonBack"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        />

    <!-- Horizontal Layout for Spinners -->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_ByFirstLetterButtonBack"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <!-- First Spinner for A to Z -->
        <Spinner
            android:id="@+id/a_letterSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown" />

        <!-- Second Spinner for Categories -->
        <Spinner
            android:id="@+id/a_categorySpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <Button
        android:id="@+id/a_searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerInParent="true">

    <TextView
        android:id="@+id/ByFirstLetterAndCategortLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centered Text"
        android:layout_centerInParent="true"/>
    </ScrollView>

</RelativeLayout>